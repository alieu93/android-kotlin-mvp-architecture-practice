<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addtodoitem.ui.AddToDoItemFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_to_do_item_text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_to_do_item_text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text|textMultiLine|textCapSentences"
            android:maxLines="2"
            android:hint="Enter new TO DO item:"
            tools:text="Test text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/save_to_do_item_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_to_do_item_text_input_layout"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6"/>

</androidx.constraintlayout.widget.ConstraintLayout>